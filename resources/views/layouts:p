                                                $foo.scrollTop($foo.scrollTop() + 450);
                                            }, 500);//wait 2 seconds


                                        } else if ($(this).hasClass("history_of_subscribers")) {

                                            setTimeout(function () {
                                                var $foo = $("#userModalCenter");
                                                $foo.scrollTop($foo.scrollTop() + 1000);
                                            }, 500);//wait 2 seconds

