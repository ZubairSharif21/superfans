<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\Chatbox;
use App\Models\User; 

class ChatboxController extends Controller
{
    public function getMessages(Request $request)
    {
        $request->validate([
            'user_id' => 'required|integer',
            'influencer_id' => 'required|integer'
        ]);

        $user_id = $request->input('user_id');
        $influencer_id = $request->input('influencer_id');

        $messages = Chatbox::where(function($query) use ($user_id, $influencer_id) {
                $query->where('sender_id', $user_id)
                      ->where('receiver_id', $influencer_id);
            })
            ->orWhere(function($query) use ($user_id, $influencer_id) {
                $query->where('sender_id', $influencer_id)
                      ->where('receiver_id', $user_id);
            })
            ->orderBy('created_at', 'asc')
            ->get();

        return response()->json($messages);
    }

    public function sendMessage(Request $request)
    {
        $validated = $request->validate([
            'sender_id' => 'required|integer',
            'receiver_id' => 'required|integer',
            'message' => 'required|string'
        ]);

        Chatbox::create([
            'sender_id' => $validated['sender_id'],
            'receiver_id' => $validated['receiver_id'],
            'message' => $validated['message'],
            'created_at' => now()
        ]);

        return response()->json(['success' => true]);
    }


    public function getChatUsers(Request $request)
    {
        $request->validate([
            'influencer_id' => 'required|integer',
        ]);

        $influencer_id = $request->input('influencer_id');

        $userIds = Chatbox::where('sender_id', $influencer_id)
            ->orWhere('receiver_id', $influencer_id)
            ->selectRaw('CASE WHEN sender_id = ? THEN receiver_id ELSE sender_id END as user_id', [$influencer_id])
            ->distinct()
            ->pluck('user_id');

        $users = User::whereIn('id', $userIds)->get(['id', 'name', 'profile_picture']);

        return response()->json($users);
    }
}